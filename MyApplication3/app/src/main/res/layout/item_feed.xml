<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="100dp"
    android:orientation="vertical"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation = "horizontal"   >

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
        android:checked="true"/>


        <TextView
                android:id="@+id/item_feed_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="3"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/news_item_header_text_size" />

            <ImageView
                android:id="@+id/item_feed_image"
                android:layout_width="@dimen/news_item_image_size"
                android:layout_height="@dimen/news_item_image_size" />
        </LinearLayout>
</android.support.v7.widget.CardView>