<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.juliarayskaya.myapplication.WelcomeActivity">
        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation = "vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/welcomeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="80dp"
                android:textStyle="bold"
                android:text="@string/welcomeTitle">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation = "horizontal"
                android:layout_margin="30dp"
                android:layout_weight="3">
            <ImageView
                android:id="@+id/check"
                android:src="@drawable/check"
                android:layout_marginRight="10dp"
                android:layout_width="@dimen/welcomeImage_size"
                android:layout_height="@dimen/welcomeImage_size" />
            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/welcomeText">
            </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation = "horizontal"
                android:layout_margin="30dp"
                android:layout_weight="3">
                <ImageView
                    android:id="@+id/welcomeImage"
                    android:src="@drawable/settings"
                    android:layout_marginRight="10dp"
                    android:layout_width="@dimen/welcomeImage_size"
                    android:layout_height="@dimen/welcomeImage_size" />
                <TextView
                android:id="@+id/welcomeText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/welcomeText2">
            </TextView>
            </LinearLayout>
            <Button
                android:id="@+id/btnShowFeed"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:text="Choose feed">
            </Button>
        </LinearLayout>
</LinearLayout>